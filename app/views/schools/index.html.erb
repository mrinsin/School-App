<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year founded</th>
      <th>Street address 1</th>
      <th>Street address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Database</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.year_founded %></td>
        <td><%= school.street_address_1 %></td>
        <td><%= school.street_address_2 %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.zipcode %></td>
        <td><%= school.database %></td>
        <td><%= school.profile %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

